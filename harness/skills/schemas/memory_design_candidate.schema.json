{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "memory_design_candidate.schema.json",
  "title": "MemoryDesignCandidateV1",
  "type": "object",
  "required": ["source_run_id", "eval_task_ids", "artefact_refs", "interface_compliant"],
  "properties": {
    "source_run_id": { "type": "string" },
    "eval_task_ids": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "artefact_refs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "interface_compliant": { "type": "boolean" },
    "forbidden_io_detected": { "type": "boolean" },
    "score": { "type": "number" },
    "notes": { "type": "string" },
    "design_patch_ref": { "type": "string" }
  },
  "additionalProperties": false
}
