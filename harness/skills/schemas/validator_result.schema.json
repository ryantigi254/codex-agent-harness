{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "validator_result.schema.json",
  "title": "ValidatorResultV2",
  "type": "object",
  "required": ["validator_id", "passed", "reason_codes", "evidence_refs", "gate_scores"],
  "properties": {
    "validator_id": { "type": "string" },
    "passed": { "type": "boolean" },
    "reason_codes": { "type": "array", "items": { "type": "string" } },
    "evidence_refs": { "type": "array", "items": { "type": "string" } },
    "gate_scores": { "type": "object", "additionalProperties": true },
    "progress_delta": { "type": "number" },
    "diagnostic": { "type": "object", "additionalProperties": true },
    "policy_flags": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
